{
	"name": "event-calendar",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint . scripts",
		"generate-statics": "node scripts/generate-statics.js",
		"generate-screenshots": "npx tsx scripts/generate-screenshots.ts",
		"screenshots": "playwright test tests/screenshots.spec.ts --project=chromium",
		"test": "vitest run && elm-test",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"test:ui": "vitest --ui",
		"test:bdd": "node test-bdd.js",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"test:spec": "npx elm-spec --specRoot=./elm-spec-core --specs='../tests/**/*Spec.elm'",
		"test:spec:chromium": "npx elm-spec --specRoot=./elm-spec-core --specs='../tests/**/*Spec.elm' --browser=chromium",
		"test:spec:headed": "npx elm-spec --specRoot=./elm-spec-core --specs='../tests/**/*Spec.elm' --browser=chromium --visible",
		"test:spec:firefox": "npx elm-spec --specRoot=./elm-spec-core --specs='../tests/**/*Spec.elm' --browser=firefox",
		"test:spec:webkit": "npx elm-spec --specRoot=./elm-spec-core --specs='../tests/**/*Spec.elm' --browser=webkit",
		"elm-test": "elm-test"
	},
	"devDependencies": {
		"@cucumber/cucumber": "^12.4.0",
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.38.0",
		"@fontsource/fira-mono": "^5.2.7",
		"@playwright/test": "1.54.1",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.14",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/user-event": "^14.6.1",
		"@types/leaflet": "^1.9.12",
		"@types/node": "^20",
		"@vitest/coverage-v8": "^4.0.14",
		"@vitest/ui": "^4.0.14",
		"elm-spec-runner": "^2.5.1",
		"elm-test": "0.19.1-revision17",
		"eslint": "^9.38.0",
		"eslint-config-prettier": "^10.1.8",
		"globals": "^16.4.0",
		"happy-dom": "^20.0.11",
		"jsdom": "^27.2.0",
		"playwright": "1.54.1",
		"playwright-bdd": "^8.4.2",
		"prettier": "^3.6.2",
		"prettier-plugin-tailwindcss": "^0.7.1",
		"tailwindcss": "^4.1.14",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.1",
		"vite": "^7.1.10",
		"vite-plugin-elm-watch": "^1.4.4",
		"vitest": "^4.0.14"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild",
			"@tailwindcss/oxide"
		]
	},
	"dependencies": {
		"feed": "^5.1.0",
		"flowbite": "^3.1.2",
		"ical-generator": "^10.0.0",
		"leaflet": "^1.9.4",
		"pocketbase": "^0.26.3",
		"qrcode": "^1.5.4"
	}
}
